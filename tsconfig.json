{
  "compilerOptions": {
    "target": "es2017",
    "sourceMap": false,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "declarationDir": "./build",
  },
  "exclude": [
    "./node_modules/**/*",
  ]
}